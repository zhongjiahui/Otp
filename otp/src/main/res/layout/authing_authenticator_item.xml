<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="0dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/background_otp_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">
        <cn.authing.otp.wideget.CodeView
            android:id="@+id/otp_item_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="38dp"/>
        <ImageView
            android:id="@+id/otp_item_img_edit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@drawable/ic_otp_edit"/>
        <ImageView
            android:id="@+id/otp_item_img_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@drawable/ic_otp_delete"/>
        <cn.authing.otp.wideget.CountDownPie
            android:id="@+id/otp_item_countdown_pie"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:singleLine="true"
        android:maxLines="1"
        android:lines="1"
        android:textColor="#86909C"
        android:textSize="14sp"/>

</LinearLayout>