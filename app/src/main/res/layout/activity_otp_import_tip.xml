<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingStart="@dimen/common_padding_24"
        android:paddingEnd="@dimen/common_padding_24">

        <include
            android:id="@+id/otp_import_tip_actionbar"
            layout="@layout/layout_actionbar" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_otp_tip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_margin_24"
            android:gravity="center"
            android:text="@string/import_account_tip"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/common_text_size_16" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/otp_import_tip_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_height_button_48"
            android:layout_marginStart="74dp"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="@string/scan_login"
            android:textAppearance="@android:style/Widget.TextView"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/common_text_size_16" />

    </LinearLayout>

</layout>